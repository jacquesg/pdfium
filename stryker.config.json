{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts",
    "!src/vendor/**",
    "!src/browser.ts",
    "!src/node.ts",
    "!src/worker.ts"
  ],
  "thresholds": {
    "high": 80,
    "low": 70,
    "break": 60
  },
  "vitest": {
    "configFile": "vitest.config.ts"
  }
}
